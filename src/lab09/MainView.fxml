<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" fx:id="mainPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lab09.MainViewController">
   <children>
      <MenuBar prefHeight="25.0" prefWidth="600.0">
        <menus>
          <Menu fx:id="newItem" text="_File">
            <items>
              <MenuItem mnemonicParsing="false" text="New" />
                  <MenuItem fx:id="openItem" mnemonicParsing="false" text="Open..." />
                  <MenuItem fx:id="closeItem" mnemonicParsing="false" text="Close" />
                  <MenuItem fx:id="saveItem" mnemonicParsing="false" text="Save As..." />
            </items>
          </Menu>
          <Menu text="_Edit">
            <items>
                  <CheckMenuItem fx:id="gridItem" mnemonicParsing="false" text="Use GridLines" />
                  <MenuItem fx:id="copyItem" mnemonicParsing="false" text="Copy" />
                  <Menu fx:id="searchMenu" mnemonicParsing="false" text="Search">
                    <items>
                        <MenuItem fx:id="findItem" mnemonicParsing="false" text="Find" />
                        <MenuItem fx:id="replaceItem" mnemonicParsing="false" text="Replace" />
                    </items>
                  </Menu>
            </items>
          </Menu>
          <Menu text="_Settings">
               <items>
                  <RadioMenuItem fx:id="smallItem" mnemonicParsing="false" text="Small">
                     <toggleGroup>
                        <ToggleGroup fx:id="size" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem fx:id="mediumItem" mnemonicParsing="false" selected="true" text="Medium" toggleGroup="$size" />
                  <RadioMenuItem fx:id="largeItem" mnemonicParsing="false" text="Large" toggleGroup="$size" />
               </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
